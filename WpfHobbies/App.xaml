<Application x:Class="WpfHobbies.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WpfHobbies"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <SolidColorBrush x:Key="PrimaryBackgroundColor" Color="AliceBlue"/>
            <SolidColorBrush x:Key="ButtonSuccess" Color="#62E668"/>
            <SolidColorBrush x:Key="ButtonDanger" Color="#FF6763"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
